<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button">
        <Setter Property="Background" Value="Azure"/>
        <Setter Property="Foreground" Value="Azure"/>
        <!-- Otros setters... -->
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontSize" Value="18"/>
        <!-- Otros setters... -->
    </Style>

    <!-- Estilo para barras de progreso -->
    <Style TargetType="ProgressBar" x:Key="MyProgressBarStyle">
        <Setter Property="Height" Value="33"/>
        <Setter Property="Margin" Value="10,11,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <!-- Otros setters... -->
    </Style>

    <!-- Estilo para sliders -->
    <Style TargetType="Slider" x:Key="MySliderStyle">
        <Setter Property="Height" Value="22"/>
        <Setter Property="Margin" Value="382,0,0,0"/>
        <!-- Otros setters... -->
    </Style>

    <!-- Estilo para cuadros de texto -->
    <Style TargetType="TextBox" x:Key="MyTextBoxStyle">
        <Setter Property="Height" Value="46"/>
        <Setter Property="Width" Value="398"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <!-- Otros setters... -->
    </Style>

    <!-- Estilo para etiquetas -->
    <Style TargetType="Label" x:Key="MyLabelStyle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <!-- Otros setters... -->
    </Style>

    <!-- Estilo para botones -->
    <Style TargetType="Button" x:Key="MyButtonStyle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="133"/>
        <!-- Otros setters... -->
    </Style>

    <!-- Estilo para casillas de verificación -->
    <Style TargetType="CheckBox" x:Key="MyCheckBoxStyle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Width" Value="61"/>
        <!-- Otros setters... -->
    </Style>
</ResourceDictionary>